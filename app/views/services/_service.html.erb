<% teacher = service.teacher %>
<div class="box-item box-item-user">
  <div class="box-l">
    <div class="pt">
      <img src="<%= teacher.avatar.url %>"/>
    </div>
  </div>
  <div class="box-r">
    <div class="order-rate">
      <%= "#{service.successful_orders_count}/#{service.orders_count}" %>
    </div>
    <div class="expense">
      <%= service.expense %>
      <%= t("number.currency.format.unit") %>
    </div>
    <div class="member">
      <%= link_to teacher.name, "/countries/#{@cc}/request_#{request_type}/#{service.id}", 
        :target => "_blank" %>
      <span><%= teacher.address_show %></span>
    </div>
    <div class="text">
      <%= teacher.about %>
    </div>
  </div>
  <div class="clearfix"></div>
</div>
