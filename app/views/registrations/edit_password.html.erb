<% content_for :body_left do %>
  <%= render :partial => "partials/tab_1", 
    :locals => { 
    :tabs => [:active => true, :a => menus_account[2]]} %>

  <%= form_for(resource, :as => resource_name, :url => update_password_user_path, :html => { :method => :put }) do |f| %>
    <%= devise_error_messages! %>

    <div class="tr">
      <%= f.label :password, :class => "field" %>
      <%= f.password_field :password %>
    </div>

    <div class="tr">
      <%= f.label :password_confirmation, :class => "field" %>
      <%= f.password_field :password_confirmation %>
    </div>

    <div class="tr">
      <%= f.label :current_password, :class => "field" %>
      <%= f.password_field :current_password %>
    </div>

    <div class="tr-btn">
      <%= submit_tag t("buttons.save"), :class => "btn btn-submit" %>
    </div>
  <% end %>
<% end %>
<% content_for :body_right do %>
  <%= render :partial => "partials/home_menu", 
    :locals => {:current_href => menus_account[2][:href]} %>
<% end %>


