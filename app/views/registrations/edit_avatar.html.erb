<% content_for :body_left do %>
  <%= render :partial => "partials/tab_1", 
    :locals => { 
    :tabs => [{:active => true, :a => menus_account[3]}]} %>

  <div class='curr-picture'> 
    <h4><%= t("picture.curr") %></h4> 
    <% if current_user.avatar %>
      <div class='img-wrapper'> 
        <img src='<%= current_user.avatar.url(:thumb) %>'/> 
      </div> 
    <% end %>
  </div>
  <div class="edit-picture">
    <h4><%= t("picture.edit") %></h4> 
    <%= form_for current_user, :url => update_avatar_user_path,
      :html => { :multipart => true, :method => :put } do |f| %>
      <%= devise_error_messages! %>
      <div class="tr">
        <%= t("picture.tips") %><br/>
        <%= f.file_field :avatar %>
      </div>
      <div class="tr">
        <%= submit_tag t("buttons.upload"), :class => "btn btn-submit" %>
      </div>
    <% end %>
  </div>
<% end %>

<% content_for :body_right do %>
  <%= render :partial => "partials/home_menu", 
    :locals => {:current_href => menus_account[3][:href]} %>
<% end %>
